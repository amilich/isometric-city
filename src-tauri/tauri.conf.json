{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Iso Desktop",
  "version": "0.1.0",
  "identifier": "com.isometric.desktop",
  "build": {
    "beforeDevCommand": "npm run desktop:dev",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:4173",
    "frontendDist": "../desktop"
  },
  "app": {
    "windows": [
      {
        "title": "Iso Desktop",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}
